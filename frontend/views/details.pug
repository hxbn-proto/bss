extends layout

block content
  -data = data || {}

  div.form-wrapper
    h1.text-center.mb-4(style="font-size: 1.5em;") Your Visit Details
    - if (data.cancelled)
      p.mb-2(style="color: red; font-size: 1.5em;") Visit number #{data.id} cancelled.
      a.btn.btn-secondary.mt-2(href=".") Home
    - else
      table.mb-4(style="border-collapse: collapse; width: 100%; font-size: 1.2em;")
        tr
          td(style="text-align: right; padding: 5px; width: 50%; font-weight: bold;") Visit Number:
          td(style="padding: 5px; width: 50%; font-style: italic;") #{data.id}
        tr
          td(style="text-align: right; padding: 5px; width: 50%; font-weight: bold;") Name:
          td(style="padding: 5px; width: 50%; font-style: italic;") #{data.user}
        tr
          td(style="text-align: right; padding: 5px; font-weight: bold;") Master:
          td(style="padding: 5px; font-style: italic;") #{data.master}
        tr
          td(style="text-align: right; padding: 5px; font-weight: bold;") Visit Date:
          td(style="padding: 5px; font-style: italic;") #{data.date}
        tr
          td(style="text-align: right; padding: 5px; font-weight: bold;") Visit Time:
          td(style="padding: 5px; font-style: italic;") #{data.time}

    
      a.btn.btn-danger.mt-4(href=`/cancel?id=${data.id}`) Cancel Visit
      a.btn.btn-secondary.mt-2(href=".") Home